<%= form_for @list, :html => { :class => "form-horizontal list" } do |f| %>

  <% if @list.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
       <!--<%=f.error_span(:title) %>-->
    </div>
   
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
      <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <% if(session[:list_id].nil?) %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  lists_path, :class => 'btn btn-default' %>
        <% else %>
          <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  list_path(session[:list_id]), :class => 'btn btn-default' %>
        <% end %>
    </div>
  </div>

<% end %>
